//- views/partials/left_sidebar.pug
.sidebar.left-sidebar.desktop-only
  .brand EPORIA

  //- MAIN
  .nav-group
    .nav-label THE SCENE
    .nav-item(onclick="navigateTo('/player/dashboard')" class=(path.includes('dashboard') ? 'active' : ''))
        i.fas.fa-globe-americas
        span The Pulse
    .nav-item(onclick="navigateTo('/player/profile?tab=following')") 
        i.fas.fa-user-friends
        span Following

  //- PERSONAL
  .nav-group
    .nav-label COLLECTION
    .nav-item(onclick="navigateTo('/player/favorites')" class=(path.includes('favorites') ? 'active' : ''))
        i.fas.fa-heart
        span Favorites
    .nav-item(onclick="navigateTo('/player/crates')" class=(path.includes('crates') ? 'active' : ''))
        i.fas.fa-box-open
        span My Crates

  //- TOOLS
  .nav-group
    .nav-label CREATE
    .nav-item(onclick="navigateTo('/player/workbench')" class=(path.includes('workbench') ? 'active' : ''))
        i.fas.fa-plus-square
        span New Crate

  //- COMMUNITY
  .nav-group
    .nav-label ON ROTATION
    #sidebarArtistList
      .artist-item.skeleton-text(style="width: 70%; opacity: 0.3; margin-bottom: 10px;")