doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title City Soundscape Map
    
    //- MapLibre GL JS
    link(href='https://unpkg.com/maplibre-gl@3.6.2/dist/maplibre-gl.css', rel='stylesheet')
    script(src='https://unpkg.com/maplibre-gl@3.6.2/dist/maplibre-gl.js')
    
    style.
      body {
        margin: 0;
        padding: 0;
        font-family: 'Inter', sans-serif;
        background: #0a0a0a;
        color: #fff;
      }
      
      /* Modal Overlay */
      #cityMapModal {
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        background: rgba(0, 0, 0, 0.95);
        backdrop-filter: blur(10px);
        z-index: 10000;
        display: flex;
        align-items: center;
        justify-content: center;
        animation: fadeIn 0.3s ease;
      }
      
      @keyframes fadeIn {
        from { opacity: 0; }
        to { opacity: 1; }
      }
      
      /* Map Container */
      .map-container {
        position: relative;
        width: 95vw;
        height: 90vh;
        max-width: 1600px;
        border-radius: 24px;
        overflow: hidden;
        box-shadow: 0 30px 90px rgba(0, 0, 0, 0.8);
        border: 1px solid rgba(255, 255, 255, 0.1);
      }
      
      #map {
        width: 100%;
        height: 100%;
      }
      
      /* Close Button */
      .close-btn {
        position: absolute;
        top: 20px;
        right: 20px;
        width: 48px;
        height: 48px;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.2);
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        z-index: 10;
        transition: all 0.2s;
      }
      
      .close-btn:hover {
        background: rgba(255, 255, 255, 0.2);
        transform: scale(1.05);
      }
      
      .close-btn i {
        font-size: 1.5rem;
        color: #fff;
      }
      
      /* Info Panel */
      .info-panel {
        position: absolute;
        top: 20px;
        left: 20px;
        background: rgba(0, 0, 0, 0.8);
        backdrop-filter: blur(20px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 16px;
        padding: 20px 24px;
        min-width: 280px;
        z-index: 5;
      }
      
      .info-panel h2 {
        margin: 0 0 8px 0;
        font-size: 1.5rem;
        font-weight: 700;
        background: linear-gradient(135deg, #88C9A1 0%, #fff 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
      }
      
      .info-panel p {
        margin: 0;
        opacity: 0.7;
        font-size: 0.9rem;
      }
      
      /* City Hover Card */
      .city-card {
        position: absolute;
        bottom: 20px;
        left: 50%;
        transform: translateX(-50%) translateY(100px);
        background: rgba(0, 0, 0, 0.95);
        backdrop-filter: blur(30px);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 20px;
        padding: 24px 32px;
        min-width: 400px;
        z-index: 10;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        opacity: 0;
        pointer-events: none;
      }
      
      .city-card.active {
        transform: translateX(-50%) translateY(0);
        opacity: 1;
        pointer-events: all;
      }
      
      .city-card-header {
        display: flex;
        align-items: center;
        gap: 16px;
        margin-bottom: 16px;
      }
      
      .city-orb {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        position: relative;
        animation: pulse 2s infinite;
      }
      
      @keyframes pulse {
        0%, 100% { transform: scale(1); }
        50% { transform: scale(1.1); }
      }
      
      .city-card-info h3 {
        margin: 0 0 4px 0;
        font-size: 1.8rem;
        font-weight: 800;
      }
      
      .city-card-info p {
        margin: 0;
        opacity: 0.7;
        font-size: 0.9rem;
      }
      
      .city-stats {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 16px;
        margin-bottom: 16px;
      }
      
      .stat {
        text-align: center;
      }
      
      .stat-value {
        font-size: 1.5rem;
        font-weight: 700;
        display: block;
      }
      
      .stat-label {
        font-size: 0.75rem;
        opacity: 0.6;
        text-transform: uppercase;
        letter-spacing: 0.5px;
      }
      
      .genre-tags {
        display: flex;
        gap: 8px;
        flex-wrap: wrap;
        margin-bottom: 20px;
      }
      
      .genre-tag {
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 0.75rem;
        font-weight: 600;
        background: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.2);
      }
      
      .taste-match {
        background: linear-gradient(135deg, rgba(136, 201, 161, 0.2) 0%, rgba(136, 201, 161, 0.05) 100%);
        border: 1px solid rgba(136, 201, 161, 0.3);
        border-radius: 12px;
        padding: 12px 16px;
        margin-bottom: 20px;
        display: flex;
        align-items: center;
        gap: 12px;
      }
      
      .taste-match-score {
        font-size: 2rem;
        font-weight: 800;
        color: #88C9A1;
      }
      
      .taste-match-text {
        flex: 1;
        font-size: 0.85rem;
      }
      
      .city-actions {
        display: flex;
        gap: 12px;
      }
      
      .btn-explore {
        flex: 1;
        padding: 14px 24px;
        background: linear-gradient(135deg, #88C9A1 0%, #6AB187 100%);
        border: none;
        border-radius: 12px;
        color: #000;
        font-weight: 700;
        font-size: 1rem;
        cursor: pointer;
        transition: all 0.2s;
      }
      
      .btn-explore:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 24px rgba(136, 201, 161, 0.4);
      }
      
      .btn-preview {
        padding: 14px 20px;
        background: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 12px;
        color: #fff;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s;
      }
      
      .btn-preview:hover {
        background: rgba(255, 255, 255, 0.15);
      }
      
      /* Legend */
      .map-legend {
        position: absolute;
        bottom: 20px;
        right: 20px;
        background: rgba(0, 0, 0, 0.8);
        backdrop-filter: blur(20px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 12px;
        padding: 16px;
        z-index: 5;
      }
      
      .legend-title {
        font-size: 0.85rem;
        font-weight: 700;
        margin-bottom: 12px;
        opacity: 0.9;
      }
      
      .legend-item {
        display: flex;
        align-items: center;
        gap: 10px;
        margin-bottom: 8px;
        font-size: 0.8rem;
      }
      
      .legend-color {
        width: 20px;
        height: 20px;
        border-radius: 50%;
        box-shadow: 0 0 12px currentColor;
      }

  body
    //- Modal Structure (to be injected into your app)
    #cityMapModal(style="display: none;")
      .map-container
        //- Map
        #map
        
        //- Close Button
        .close-btn(onclick="closeCityMap()")
          i.fas.fa-times
        
        //- Info Panel
        .info-panel
          h2 Sound-Scape
          p Explore cities by their musical energy
        
        //- City Card (shows on hover)
        #cityCard.city-card
          .city-card-header
            #cityOrb.city-orb
            .city-card-info
              h3#cityName San Diego
              p#cityLocation California, USA
          
          .taste-match
            #tasteScore.taste-match-score 92%
            .taste-match-text
              strong Taste Match
              br
              | Based on your listening history
          
          .city-stats
            .stat
              span#artistCount.stat-value 24
              span.stat-label Artists
            .stat
              span#trackCount.stat-value 156
              span.stat-label Tracks
            .stat
              span#crateCount.stat-value 12
              span.stat-label Crates
          
          #genreTags.genre-tags
            //- Populated dynamically
          
          .city-actions
            button.btn-explore(onclick="exploreCityFromMap()")
              i.fas.fa-compass
              |  Explore Scene
            button.btn-preview(onclick="previewCitySound()")
              i.fas.fa-play
        
        //- Legend
        .map-legend
          .legend-title Genre Colors
          .legend-item
            .legend-color(style="background: #D282A6; box-shadow: 0 0 20px #D282A6;")
            span Pop
          .legend-item
            .legend-color(style="background: #D4AF37; box-shadow: 0 0 20px #D4AF37;")
            span Hip-Hop
          .legend-item
            .legend-color(style="background: #00FFD1; box-shadow: 0 0 20px #00FFD1;")
            span Electronic
          .legend-item
            .legend-color(style="background: #9D4EDD; box-shadow: 0 0 20px #9D4EDD;")
            span R&B
          .legend-item
            .legend-color(style="background: #FF3333; box-shadow: 0 0 20px #FF3333;")
            span Rock

