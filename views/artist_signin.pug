doctype html
html(lang="en")
  head
    title Artist Login | Eporia
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    link(rel='stylesheet', href='https://fonts.googleapis.com/css2?family=Nunito:wght@400;700;900&display=swap')
    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css")
    
    //- Shared Themes
    link(rel='stylesheet', href='/stylesheets/playerStyle.css')
    link(rel='stylesheet', href='/stylesheets/auth.css')

  body
    //- NAV
    nav.simple-nav
      .nav-left
        a.back-link(href="/") 
          i.fas.fa-arrow-left
          span Back Home
      .nav-center
        span.logo-text Eporia
      .nav-right
        //- Link back to listener login if they are lost
        a.btn-login-nav(href="/members/login") 
          span.login-text-bold Listener Login

    //- CENTERED CARD
    .auth-wrapper
      .signin-container
        .step-header
          h1 Artist Studio
          div(style="margin-top:5px")
            span.mode-badge CREATOR PORTAL
          p(style="margin-top: 15px") Log in to manage your releases and stats.

        div#errorMsg.error-banner Invalid credentials.

        //- LOGIN FORM
        form#artistLoginForm
            .input-group
                label.label Artist Email
                input.studio-input(type="email" id="email" required placeholder="management@band.com")
            
            .input-group
                label.label Password
                input.studio-input(type="password" id="password" required placeholder="••••••••")

            button.btn-full.artist-btn(type="submit" id="submitBtn") 
                i.fas.fa-bolt(style="margin-right:8px")
                | Enter Studio

        .footer-link
            span Not on Eporia yet? 
            a.link-highlight(href="/artist/onboarding") Apply for an Artist Profile

    //- LOGIC
    script(type="module" src="/javascripts/artistSignin.js")
    
    script.
      if (localStorage.getItem('theme') === 'dark') document.body.classList.add('dark-theme');