doctype html
html(lang="en")
  head
    title Artist Studio | Eporia
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    meta(charset="UTF-8")
    link(rel='stylesheet', href='https://fonts.googleapis.com/css2?family=Nunito:wght@400;600;700;800;900&display=swap')
    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css")
    link(rel='stylesheet', href='/stylesheets/layout.css')
    link(rel='stylesheet', href='/stylesheets/artistStudio.css')
    link(rel='stylesheet', href='/stylesheets/artistStudio_enhanced.css')
    script(src="https://cdn.jsdelivr.net/npm/essentia.js@0.1.3/dist/essentia-wasm.web.js")
    script(src="https://cdn.jsdelivr.net/npm/essentia.js@0.1.3/dist/essentia.js-core.js")

  body
    //- Hidden ID Reference
    input#artistIdRef(type="hidden" value=artistId)

    //- ==========================================
    //- STUDIO SIDEBAR NAVIGATION
    //- ==========================================
    nav.studio-sidebar
      .brand-area
        span.brand-text EPORIA
        span.badge-studio STUDIO
      
      .profile-summary
        img#studioAvatar(src="https://via.placeholder.com/50" alt="Artist Avatar")
        div
          .artist-name#studioName Loading...
          .artist-handle#studioHandle @...

      .nav-menu
        button.nav-btn.active(onclick="switchView('overview')") 
          i.fas.fa-home
          span Overview
        
        button.nav-btn(onclick="switchView('music')") 
          i.fas.fa-music
          span My Catalog
        
        button.nav-btn(onclick="switchView('merch')") 
          i.fas.fa-tshirt
          span Merch Store
        
        button.nav-btn(onclick="switchView('analytics')") 
          i.fas.fa-chart-line
          span Analytics
        
        button.nav-btn(onclick="switchView('settings')") 
          i.fas.fa-cog
          span Settings

    //- ==========================================
    //- MAIN CONTENT AREA
    //- ==========================================
    main.studio-main
      
      //- ==========================================
      //- VIEW: OVERVIEW
      //- ==========================================
      #view-overview.view-section.active
        header.top-header
          h1 Dashboard
          button.btn-primary(onclick="openUploadModal('track')") 
            i.fas.fa-plus
            span New Release
        
        .stats-grid
          .stat-card
            .stat-icon.green
              i.fas.fa-users
            .stat-value#statListeners --
            .stat-label Monthly Listeners
          
          .stat-card
            .stat-icon.blue
              i.fas.fa-heart
            .stat-value#statFollowers --
            .stat-label Followers
          
          .stat-card
            .stat-icon.orange
              i.fas.fa-coins
            .stat-value#statTips $--
            .stat-label Total Tips
        
        h3.section-title Quick Actions
        .action-grid
          .action-card(onclick="openUploadModal('track')")
            i.fas.fa-microphone-alt
            span Upload Single
          
          .action-card(onclick="openUploadModal('album')")
            i.fas.fa-compact-disc
            span Create Album
          
          .action-card(onclick="switchView('merch'); setTimeout(openMerchModal, 200)")
            i.fas.fa-shopping-bag
            span Add Merch
          
          .action-card(onclick="alert('Community Posts - Coming Soon')")
            i.fas.fa-pen-nib
            span Post Update

      //- ==========================================
      //- VIEW: MY CATALOG
      //- ==========================================
      #view-music.view-section
        header.top-header
          h1 My Catalog
          .header-actions
            button.btn-secondary(onclick="switchView('overview')") 
              i.fas.fa-arrow-left
              span Back
            button.btn-primary(onclick="openUploadModal('track')") 
              i.fas.fa-plus
              span Add Track
        
        .catalog-list#catalogList
          .empty-state
            i.fas.fa-music
            p No tracks uploaded yet. Start your journey!
            button.btn-primary(onclick="openUploadModal('track')") Upload Your First Track

      //- ==========================================
      //- VIEW: MERCH STORE
      //- ==========================================
      #view-merch.view-section
        header.top-header
          h1 Merch Store
          .header-actions
            button.btn-secondary(onclick="switchView('overview')")
              i.fas.fa-arrow-left
              span Back
            button.btn-primary(onclick="openMerchModal()")
              i.fas.fa-plus
              span Add Item

        .merch-guarantee-banner
          .guarantee-icon
            i.fas.fa-shield-alt
          .guarantee-text
            strong 100% Payout Guarantee
            span You set the price. Every cent of it lands in your pocket. Eporia adds a transparent supporter fee on top — fans pay it, not you.

        .merch-fulfillment-bar
          i.fas.fa-truck
          span
            strong You ship everything yourself.
            |  Set your rates below per item. Eporia never charges a fee on shipping — fans pay your exact rate, you keep it all. Digital items deliver instantly.

        .merch-grid#merchGrid
          .merch-empty-state#merchEmptyState
            i.fas.fa-shopping-bag
            h3 No items yet
            p Add your first product — clothing, vinyl, a digital download, or anything you make.
            button.btn-primary(onclick="openMerchModal()") 
              i.fas.fa-plus
              span  Add First Item

        //- ==========================================
        //- MODAL: ADD / EDIT MERCH ITEM
        //- ==========================================
        #merchModal.modal-overlay
          .modal-card.merch-modal-card
            .modal-header
              h2#merchModalTitle Add Merch Item
              button.close-btn(onclick="closeMerchModal()") &times;

            form#merchForm
              input#merchItemId(type="hidden" value="")

              //- Category selector
              .merch-category-grid
                label.merch-cat-option
                  input(type="radio" name="merchCategory" value="clothing" required)
                  .cat-card
                    i.fas.fa-tshirt
                    span Clothing
                label.merch-cat-option
                  input(type="radio" name="merchCategory" value="vinyl")
                  .cat-card
                    i.fas.fa-compact-disc
                    span Vinyl / CD / Tape
                label.merch-cat-option
                  input(type="radio" name="merchCategory" value="digital")
                  .cat-card
                    i.fas.fa-download
                    span Digital Album
                label.merch-cat-option
                  input(type="radio" name="merchCategory" value="artwork")
                  .cat-card
                    i.fas.fa-paint-brush
                    span Artwork / Print
                label.merch-cat-option
                  input(type="radio" name="merchCategory" value="bundle")
                  .cat-card
                    i.fas.fa-box-open
                    span Bundle
                label.merch-cat-option
                  input(type="radio" name="merchCategory" value="other")
                  .cat-card
                    i.fas.fa-tag
                    span Other

              //- Conditional: clothing sub-options
              .merch-sub-section#clothingOptions(style="display:none")
                .input-group
                  label Clothing Type
                  select.studio-select#clothingType(name="clothingType")
                    option(value="tshirt") T-Shirt
                    option(value="hoodie") Hoodie
                    option(value="longsleeve") Long Sleeve
                    option(value="crewneck") Crewneck
                    option(value="hat") Hat / Cap
                    option(value="jacket") Jacket
                    option(value="shorts") Shorts
                    option(value="socks") Socks
                    option(value="other") Other Clothing
                .input-group
                  label Available Sizes
                  .size-checkbox-row
                    label.size-pill
                      input(type="checkbox" name="sizes" value="XS")
                      span XS
                    label.size-pill
                      input(type="checkbox" name="sizes" value="S")
                      span S
                    label.size-pill
                      input(type="checkbox" name="sizes" value="M" checked)
                      span M
                    label.size-pill
                      input(type="checkbox" name="sizes" value="L" checked)
                      span L
                    label.size-pill
                      input(type="checkbox" name="sizes" value="XL" checked)
                      span XL
                    label.size-pill
                      input(type="checkbox" name="sizes" value="2XL")
                      span 2XL
                    label.size-pill
                      input(type="checkbox" name="sizes" value="3XL")
                      span 3XL

              //- Conditional: vinyl/CD/tape sub-options
              .merch-sub-section#vinylOptions(style="display:none")
                .input-group
                  label Format
                  select.studio-select#vinylFormat(name="vinylFormat")
                    option(value="vinyl_12") 12" Vinyl
                    option(value="vinyl_7") 7" Vinyl
                    option(value="cd") CD
                    option(value="cassette") Cassette Tape
                    option(value="8track") 8-Track

              //- Conditional: digital sub-options
              .merch-sub-section#digitalOptions(style="display:none")
                .input-group
                  label Digital Format
                  select.studio-select#digitalFormat(name="digitalFormat")
                    option(value="mp3") MP3 Download
                    option(value="flac") FLAC (Lossless)
                    option(value="wav") WAV
                    option(value="stems") Stems Pack
                    option(value="pdf") PDF / Zine
                .merch-info-note
                  i.fas.fa-info-circle
                  span Digital items are delivered via a secure download link sent to the buyer's email after checkout.

              //- Core fields
              .merch-form-grid
                .input-group.full
                  label Item Name
                  input.studio-input#merchName(type="text" name="name" placeholder='e.g. "Midnight Drops Hoodie"' required)

                .input-group.full
                  label Description
                  textarea.studio-input#merchDesc(name="description" rows="3" placeholder="Tell fans what makes this special...")

                .input-group
                  label Your Payout Price ($)
                  .price-input-wrap
                    span.price-symbol $
                    input.studio-input#merchPrice(type="number" name="price" min="1" step="0.01" placeholder="25.00" required)
                  p.field-hint Fans will see a small supporter fee added on top of this — you keep the full amount.

                .input-group
                  label Stock Quantity
                  input.studio-input#merchStock(type="number" name="stock" min="1" placeholder="Leave blank = unlimited")
                  p.field-hint Leave blank for print-on-demand or digital items.

              //- Photo uploads
              .input-group.full
                label Product Photos (up to 4)
                .merch-photo-grid#merchPhotoGrid
                  .merch-photo-slot#photoSlot0
                    input.merch-photo-input(type="file" accept="image/*" id="photoInput0" onchange="handleMerchPhoto(this, 0)")
                    .photo-slot-placeholder
                      i.fas.fa-camera
                      span Main photo
                  .merch-photo-slot#photoSlot1
                    input.merch-photo-input(type="file" accept="image/*" id="photoInput1" onchange="handleMerchPhoto(this, 1)")
                    .photo-slot-placeholder
                      i.fas.fa-plus
                  .merch-photo-slot#photoSlot2
                    input.merch-photo-input(type="file" accept="image/*" id="photoInput2" onchange="handleMerchPhoto(this, 2)")
                    .photo-slot-placeholder
                      i.fas.fa-plus
                  .merch-photo-slot#photoSlot3
                    input.merch-photo-input(type="file" accept="image/*" id="photoInput3" onchange="handleMerchPhoto(this, 3)")
                    .photo-slot-placeholder
                      i.fas.fa-plus

              //- ==========================================
              //- SAMPLE TRACK — Bandcamp-style preview audio
              //- ==========================================
              .merch-sub-section.merch-sample-section
                .merch-sample-header
                  .merch-sample-title
                    i.fas.fa-headphones
                    h4 Sample Track
                    span.optional-badge Optional
                  p.merch-sample-desc Give fans a taste — link a song from your catalog or upload a standalone audio clip. It will play directly on your store listing.

                //- Mode toggle tabs
                .sample-mode-tabs
                  button.sample-tab.active(type="button" data-mode="link" onclick="switchSampleMode('link')")
                    i.fas.fa-link
                    span Link from My Catalog
                  button.sample-tab(type="button" data-mode="upload" onclick="switchSampleMode('upload')")
                    i.fas.fa-upload
                    span Upload New Sample

                //- Mode: Link existing song from catalog
                #sampleLinkMode.sample-mode-panel
                  .sample-search-wrap
                    i.fas.fa-search.sample-search-icon
                    input.studio-input#sampleSearchInput(
                      type="text"
                      placeholder="Search your tracks..."
                      oninput="debounceSongSearch(this.value)"
                      autocomplete="off"
                    )
                  .sample-search-results#sampleSearchResults
                    //- Populated by JS — shows song list to pick from

                //- Mode: Upload new standalone audio sample
                #sampleUploadMode.sample-mode-panel(style="display:none")
                  .sample-audio-dropzone#sampleAudioDrop
                    input(type="file" accept="audio/*" id="sampleAudioInput" style="display:none")
                    .sample-drop-content
                      i.fas.fa-music
                      p Drag audio here or click to select
                      span Supports MP3, WAV, FLAC, AAC
                  .input-group(style="margin-top:12px;")
                    label Track Title (for display in the store)
                    input.studio-input#sampleTrackTitleInput(
                      type="text"
                      placeholder='e.g. "Midnight Drops (Clip)"'
                    )
                  .sample-upload-progress#sampleUploadProgress(style="display:none")
                    .sample-upload-bar
                      .sample-upload-fill#sampleUploadFill
                    span#sampleUploadStatus Uploading...

                //- Currently linked / uploaded track preview
                #sampleTrackPreview.sample-preview-card(style="display:none")
                  .sample-preview-art#samplePreviewArt
                  .sample-preview-info
                    span.sample-preview-label Linked track
                    p.sample-preview-title#samplePreviewTitle —
                  .sample-preview-controls
                    button.sample-mini-play(type="button" id="samplePreviewPlay" onclick="toggleSamplePreview()")
                      i.fas.fa-play
                    button.sample-preview-remove(type="button" onclick="removeSampleTrack()" title="Remove sample")
                      i.fas.fa-times

              //- Shipping rates (physical items only)
              #shippingRatesSection.input-group.full
                label Shipping Rates
                .merch-info-note(style="margin-bottom: 14px;")
                  i.fas.fa-info-circle
                  span
                    | Set what fans pay for shipping. Eporia 
                    strong does not take a cut of shipping costs
                    |  — fans pay your exact rate and it goes directly to you.

                .shipping-from-row
                  .input-group(style="margin-bottom: 0;")
                    label Ship-From Location
                    input.studio-input#shipFromAddress(type="text" name="shipFromAddress" placeholder="e.g. Austin, TX  /  London, UK")
                  p.field-hint Shown to buyers on the checkout page.

                .shipping-rates-table
                  .shipping-rates-header
                    span Region
                    span First Item
                    span Each Additional
                  
                  .shipping-rate-row
                    .rate-region
                      i.fas.fa-flag-usa
                      span US Domestic
                    .rate-inputs
                      .price-input-wrap
                        span.price-symbol $
                        input.studio-input.rate-input(type="number" min="0" step="0.01" placeholder="0.00" id="rateUsDomFirst" name="rateUsDomFirst")
                      .rate-sep +
                      .price-input-wrap
                        span.price-symbol $
                        input.studio-input.rate-input(type="number" min="0" step="0.01" placeholder="0.00" id="rateUsDomAdd" name="rateUsDomAdd")

                  .shipping-rate-row
                    .rate-region
                      i.fas.fa-maple-leaf
                      span Canada
                    .rate-inputs
                      .price-input-wrap
                        span.price-symbol $
                        input.studio-input.rate-input(type="number" min="0" step="0.01" placeholder="0.00" id="rateCanadaFirst" name="rateCanadaFirst")
                      .rate-sep +
                      .price-input-wrap
                        span.price-symbol $
                        input.studio-input.rate-input(type="number" min="0" step="0.01" placeholder="0.00" id="rateCanadaAdd" name="rateCanadaAdd")

                  .shipping-rate-row
                    .rate-region
                      i.fas.fa-euro-sign
                      span Europe
                    .rate-inputs
                      .price-input-wrap
                        span.price-symbol $
                        input.studio-input.rate-input(type="number" min="0" step="0.01" placeholder="0.00" id="rateEuropeFirst" name="rateEuropeFirst")
                      .rate-sep +
                      .price-input-wrap
                        span.price-symbol $
                        input.studio-input.rate-input(type="number" min="0" step="0.01" placeholder="0.00" id="rateEuropeAdd" name="rateEuropeAdd")

                  .shipping-rate-row
                    .rate-region
                      i.fas.fa-globe
                      span Rest of World
                    .rate-inputs
                      .price-input-wrap
                        span.price-symbol $
                        input.studio-input.rate-input(type="number" min="0" step="0.01" placeholder="0.00" id="rateWorldFirst" name="rateWorldFirst")
                      .rate-sep +
                      .price-input-wrap
                        span.price-symbol $
                        input.studio-input.rate-input(type="number" min="0" step="0.01" placeholder="0.00" id="rateWorldAdd" name="rateWorldAdd")

                .free-shipping-row
                  label.free-shipping-toggle
                    input(type="checkbox" id="freeShippingEnabled" name="freeShippingEnabled")
                    span.toggle-track
                      span.toggle-thumb
                    span.toggle-label Offer free shipping on orders over
                  .price-input-wrap.free-shipping-threshold(style="display:none")
                    span.price-symbol $
                    input.studio-input.rate-input(type="number" min="0" step="0.01" placeholder="75.00" id="freeShippingThreshold" name="freeShippingThreshold")
                  span.field-hint#freeShippingHint(style="display:none") Shipping will be waived for buyers whose order total meets this amount.

              //- Digital delivery note
              #digitalDeliveryNote.merch-info-note.accent(style="display:none")
                i.fas.fa-bolt
                span
                  strong Instant digital delivery.
                  |  After purchase, the buyer receives a secure download link via email. No shipping required.

              //- Listing status
              .input-group.full
                label Listing Status
                select.studio-select#merchStatus(name="status")
                  option(value="active") Active — visible in store
                  option(value="draft") Draft — hidden until ready
                  option(value="sold_out") Sold Out

              .modal-footer
                button.btn-secondary(type="button" onclick="closeMerchModal()") Cancel
                button.btn-primary(type="submit" id="saveMerchBtn")
                  i.fas.fa-save
                  span#saveMerchBtnText  Save Item

      //- ==========================================
      //- VIEW: ANALYTICS
      //- ==========================================
      #view-analytics.view-section
        header.top-header
          h1 Analytics
          button.btn-secondary(onclick="switchView('overview')") 
            i.fas.fa-arrow-left
            span Back
        
        .coming-soon-state
          i.fas.fa-chart-line
          h2 Advanced Analytics Coming Soon
          p Deep insights into your audience, streams, and revenue
          button.btn-primary(disabled) Get Notified

      //- ==========================================
      //- VIEW: SETTINGS
      //- ==========================================
      #view-settings.view-section
        header.top-header
          h1 Settings
          button.btn-secondary(onclick="switchView('overview')") 
            i.fas.fa-arrow-left
            span Back
        
        .settings-container
          .settings-section(style="margin-bottom: 40px; padding-bottom: 30px; border-bottom: 1px solid rgba(255,255,255,0.1);")
            h3 Profile Customization
            p Update your public artist image, banner, and bio.

            form#artistProfileForm(style="margin-top: 20px; max-width: 500px;")
              .input-group
                label Profile Image (Avatar)
                .image-upload-wrapper(style="display: flex; align-items: center; gap: 15px; margin-top: 10px;")
                  img#avatarSettingsPreview(src="https://via.placeholder.com/100" style="width: 80px; height: 80px; border-radius: 50%; object-fit: cover; border: 2px solid var(--border-color);")
                  input.studio-input(type="file" id="avatarInput" accept="image/*" style="flex: 1;")

              .input-group(style="margin-top: 20px;")
                label Banner Image (Hero Background)
                .image-upload-wrapper(style="margin-top: 10px;")
                  img#bannerSettingsPreview(src="https://via.placeholder.com/400x150" style="width: 100%; height: 120px; border-radius: 8px; object-fit: cover; border: 2px solid var(--border-color); margin-bottom: 10px;")
                  input.studio-input(type="file" id="bannerInput" accept="image/*")

              .input-group(style="margin-top: 20px;")
                label Artist Bio
                textarea.studio-input#settingsBio(rows="4" placeholder="Tell your fans about your journey...")

              button.btn-primary(type="submit" id="btnUpdateProfile" style="margin-top: 20px; width: 100%;")
                i.fas.fa-save(style="margin-right: 8px;")
                | Save Profile Changes

          .settings-section
            h3 Security & Password
            p Update your temporary password to secure your account.
            
            form#passwordUpdateForm(style="margin-top: 20px; max-width: 400px;")
              .input-group
                label New Password
                input.studio-input(type="password" id="newPassword" placeholder="Minimum 6 characters" required minlength="6")
              .input-group(style="margin-top: 15px;")
                label Confirm Password
                input.studio-input(type="password" id="confirmPassword" placeholder="Minimum 6 characters" required minlength="6")
              
              button.btn-primary(type="submit" id="btnUpdatePassword" style="margin-top: 20px; width: 100%;") 
                i.fas.fa-lock(style="margin-right: 8px;")
                | Update Password

          .settings-section(style="margin-top: 40px; border: 1px solid #E74C3C; padding: 20px; border-radius: 8px; background: rgba(231, 76, 60, 0.05);")
            h3(style="color: #E74C3C; margin-bottom: 10px;") Danger Zone
            p(style="color: #E74C3C; margin-bottom: 20px;") Permanently delete your artist account and all associated data. This action CANNOT be undone.
            button(onclick="confirmAccountDeletion()" style="background: #E74C3C; color: white; padding: 12px 24px; border: none; border-radius: 6px; cursor: pointer; font-weight: bold;") 
              i.fas.fa-trash-alt(style="margin-right: 8px;")
              | Delete Artist Account

    //- ==========================================
    //- COMMUNITY PULSE SIDEBAR
    //- ==========================================
    aside.studio-feed
      header.feed-header
        h3 Community Pulse
        span.live-dot
      
      .feed-filter
        button.filter-pill.active All
        button.filter-pill Tips
        button.filter-pill Messages

      .activity-stream#activityFeed
        .activity-item.skeleton
        .activity-item.skeleton
        .activity-item.skeleton

    //- ==========================================
    //- MODAL: SECURITY SETUP (First Time)
    //- ==========================================
    #securityModal.modal-overlay
      .security-card
        .security-icon-box
          i.fas.fa-lock
        h2.security-title Secure Your Studio
        p.security-subtitle 
          | Create a dedicated login for 
          span.highlight-artist#setupArtistName this artist
          | .
        form#securityForm.security-form
          .input-group
            label Artist Email
            input#setupEmail.security-input(type="email" placeholder="management@band.com" required autocomplete="email")
          .input-group
            label Create Password
            input#setupPass.security-input(type="password" placeholder="Min 8 chars" required minlength="8" autocomplete="new-password")
          button.security-btn(type="submit") 
            span#setupBtnText Lock & Enter Studio
            i.fas.fa-arrow-right
          p.security-helper
            i.fas.fa-info-circle
            | Separate from your personal listener account.

    //- ==========================================
    //- MODAL: UPLOAD RELEASE
    //- ==========================================
    #uploadModal.modal-overlay
      .modal-card.upload-modal
        .modal-header
          h2 Upload New Release
          button.close-btn(onclick="closeModal('uploadModal')") &times;
        
        .release-type-selector
          input#typeSingle(type="radio" name="uploadType" value="track" checked onchange="toggleUploadForm()")
          label.type-segment(for="typeSingle") 
            i.fas.fa-music
            span Single
          input#typeAlbum(type="radio" name="uploadType" value="album" onchange="toggleUploadForm()")
          label.type-segment(for="typeAlbum") 
            i.fas.fa-compact-disc
            span Album / EP
          .segment-glider

        //- SINGLE TRACK UPLOAD
        #trackUploadSection.upload-section
          form#trackUploadForm
            input#hiddenArtistId(type="hidden" name="artistId" value=artistId)
            input#hiddenDuration(type="hidden" name="duration" value="0")
            .upload-grid-layout
              .art-section
                label.label Cover Art
                .drop-zone-square#artDropZone
                  .dz-content.dz-placeholder
                    i.fas.fa-image
                    p Drag Image
                  img#artPreview(src="" style="display: none;")
                  input(type="file" accept="image/*" id="artInput" name="artFile" hidden required)
              .meta-section
                label.label Audio File
                .drop-zone-wide#audioDropZone
                  .dz-flex
                    i.fas.fa-music
                    span#fileNameDisplay.file-placeholder Drag MP3 / WAV
                  input(type="file" accept="audio/*" id="audioInput" name="audioFile" hidden required)
                .input-group
                  label Title
                  input.studio-input(type="text" id="trackTitle" name="title" placeholder="e.g. Stardust Drive" required)
                .input-group
                  label Primary Genre
                  select.studio-select#trackGenre(name="genre" required)
                    option(value="" disabled selected) Select Vibe...
                .input-group
                  label Subgenre Tags (Max 2)
                  .subgenre-pill-container#subgenreGrid
                    .empty-pill-state Select a primary genre to see tags.
            button.btn-upload(type="submit") Publish Release

        //- ALBUM UPLOAD
        #albumUploadSection.upload-section(style="display: none;")
          form#albumUploadForm
            input#hiddenArtistIdAlbum(type="hidden" value=artistId)
            .album-metadata
              .form-group.full-width
                label Album Name
